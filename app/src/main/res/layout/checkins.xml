<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/Relay_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_checkins"/>

            <LinearLayout
                android:id="@+id/brandname_checkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appname_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/neosansblack"
                    android:text="@string/app_name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/checkin_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_checkins"
                android:src="@drawable/ic_share" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relay_2"
            android:layout_below="@id/Relay_1"
            android:layout_marginTop="@dimen/margin_checkins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_checkin_height" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relay_3"
            android:layout_below="@id/Relay_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_checkins">

            <TextView
                android:id="@+id/textview_checkin_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/neosansmedium"
                android:textSize="@dimen/text_checkin"
                android:layout_marginTop="@dimen/service_name_margin"/>

            <ImageButton
                android:id="@+id/quickcontact_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_circle"
                android:layout_marginStart="@dimen/contact_badge_margin"
                android:layout_marginEnd="@dimen/margin_checkins"/>

            <ImageButton
                android:id="@+id/quickcontact_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_circle"
                android:layout_toStartOf="@id/quickcontact_1"/>

            <TextView
                android:id="@+id/about_service_1"
                android:layout_below="@id/textview_checkin_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_about"
                android:fontFamily="@font/neosansregular"
                android:layout_marginTop="@dimen/contact_badge_margin"
                android:textSize="@dimen/text_checkin_2"/>

            <TextView
                android:id="@+id/text_friends_1"
                android:layout_below="@id/quickcontact_1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/contact_badge_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_friends_1"
                android:fontFamily="@font/neosansregular"
                android:textSize="@dimen/text_checkin_2"/>

            <RatingBar
                android:id="@+id/rating_checkin_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_below="@id/about_service_1"
                android:layout_marginTop="@dimen/service_name_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_extra"
                android:layout_toEndOf="@id/rating_checkin_1"
                android:layout_marginStart="@dimen/service_name_margin"
                android:layout_below="@id/about_service_1"
                android:layout_marginTop="@dimen/service_name_margin"
                android:textSize="@dimen/text_checkin_2"/>

            <TextView
                android:id="@+id/textview_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating_checkin_1"
                android:layout_marginTop="@dimen/extra_margin"
                android:text="@string/hours_service"
                android:textSize="@dimen/text_checkin_2"
                android:fontFamily="@font/neosansregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating_checkin_1"
                android:layout_toEndOf="@id/textview_timing"
                android:text="@string/timing_checkin"
                android:fontFamily="@font/neosansregular"
                android:textSize="@dimen/text_checkin_2"
                android:layout_marginTop="@dimen/extra_margin"
                android:layout_marginStart="@dimen/service_name_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rating_checkin_1"
                android:layout_marginTop="@dimen/extra_margin"
                android:fontFamily="@font/neosansregular"
                android:textSize="@dimen/text_checkin_2"
                android:text="@string/status_service"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>